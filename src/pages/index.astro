---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { getCollection } from "astro:content";
import FormattedDate from "../components/FormattedDate.astro";

const posts = (await getCollection("blog")).sort(
  (a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />

    <article>
      <h1>Konstantin Kovar</h1>
      <p class="subtitle">Web Developer</p>

      <hr />

      <div>
        <h2>About</h2>
        <p></p>

        <h2>Blog</h2>
        <ul class="postlist">
          {
            posts.map((post) => (
              <li>
                <a href={`/blog/${post.slug}/`}>
                  <h3 class="title">{post.data.title}</h3>
                </a>
                <span class="postlist--date">
                  <FormattedDate date={post.data.pubDate} />
                </span>
              </li>
            ))
          }
        </ul>

        <h2>Projects</h2>
        <ul>
          <li>
            <a href="https://prompt-dress.com"
              ><h3>Prompt Dress Browser Extension</h3></a
            >
          </li>
          <li>
            <a
              href="https://marketplace.visualstudio.com/items?itemName=KonstantinKovar.classnames-rainbow"
              ><h3>ClassNames Rainbow VSCode Extension</h3></a
            >
          </li>
        </ul>
      </div>
    </article>
    <Footer />
  </body>
</html>

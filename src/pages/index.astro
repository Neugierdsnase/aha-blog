---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { getCollection } from "astro:content";
import FormattedDate from "../components/FormattedDate.astro";

const posts = (await getCollection("blog")).sort(
  (a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />

    <article>
      <h1>Konstantin Kovar</h1>
      <p class="subtitle">Web Developer und geiler Typ</p>

      <hr />

      <section>
        <h2>Blog</h2>
        <ul class="postlist">
          {
            posts.map((post) => (
              <li>
                <a href={`/blog/${post.slug}/`}>
                  <h3 class="title">{post.data.title}</h3>
                </a>
                <span>
                  <FormattedDate date={post.data.pubDate} />
                </span>
                <p>{post.data.description}</p>
              </li>
            ))
          }
        </ul>
      </section>

      <section>
        <h2>Projects</h2>
        <ul class="projectlist">
          <li>
            <a href="https://prompt-dress.com"
              ><h3>Prompt Dress Browser Extension</h3></a
            >
            <p>
              Eine Browsererweiterung, zum lokalen abspeichern persönlicher KI <i
                >Prompts,
              </i> um sich das ständige neue <i>primen</i> der KI-Modelle durch manuelles
              Kopieren und Einfügen zu ersparen.
            </p>
          </li>
          <li>
            <a
              href="https://marketplace.visualstudio.com/items?itemName=KonstantinKovar.classnames-rainbow"
              ><h3>ClassNames Rainbow VSCode Extension</h3></a
            >
            <span></span>
          </li>
        </ul>
      </section>

      <section>
        <h2>Wo bin ich hier?</h2>
        <p></p>
      </section>
    </article>

    <Footer />
  </body>
</html>

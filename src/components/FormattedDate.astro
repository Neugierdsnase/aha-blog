---
interface Props {
  date: Date;
  className?: string;
}

const { date, className } = Astro.props;
---

<time
  class={className}
  datetime={date.toISOString()}
  set:html={date
    .toLocaleDateString("de-AT", {
      year: "numeric",
      month: "long",
      day: "numeric",
    })
    .replaceAll(" ", "&nbsp;")}
  }
/>

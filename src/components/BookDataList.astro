---
import type { collections } from "../content/config";

type Props = Omit<
	(typeof collections)["book"]["schema"],
	"title" | "subtitle" | "releaseDate"
>;

const dataPoints = [
	["isbn", "ISBN"],
	["pages", "Seiten"],
	["publisher", "Verlag"],
];

const { props } = Astro;
---

<dl class="grid grid-cols-[max-content_auto]">
  {dataPoints.map(([field, label]) => props[field] && (<dt class="font-bold text-sm mr-6 self-baseline">{label}</dt>
  <dd class="text-sm self-baseline">
    {props[field]} 
  </dd>))}
</dl>

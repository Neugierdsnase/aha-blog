---
const { quote, footer } = Astro.props;
---

<style>
div {
  margin: 5em 0;
}
div > blockquote {
  margin-top: 3em;
  margin-bottom: 3em;
  margin-left: 1.5em;
  margin-right: 0;
  font-size: 1.4rem;

  & p {
    width: 55%;
    margin-right: 40px;
  }
}
div > blockquote,
div > blockquote > p {
  font-style: italic;
}
div > blockquote > footer {
  font-style: normal;
  width: 55%;
  font-size: 1.1rem;
  text-align: right;
}
div > blockquote > footer > cite {
  font-style: italic;
}
</style>

<div>
  <blockquote>
    <p set:html={quote} />
    <footer set:html={footer} />
  </blockquote>
</div>
